{
    "ruleset": "Punctuation",
    "type": "re",
    "flags": "I",
    "rules": [

        {
            "name": "No Space after period, unless part of i.e., or e.g.,",
            "re": "\\.(?!g\\.|e\\.|tex})[a-zA-Z]+"
        },
        {
            "name": "Need comma after i.e., or e.g.,",
            "re": "(i\\.e\\.|e\\.g\\.)(?!,)"
        },
        {
            "name": "Multiple spaces after period",
            "re": "\\.  +\\w+"
        },
        {
            "name": "No serial comma",
            "re": ", \\w+ and"
        }
    ]
}
